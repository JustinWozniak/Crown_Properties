<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="172dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="147dp"
            android:layout_marginLeft="147dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="152dp"
            android:layout_marginRight="152dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Open House!"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/agentAddressOpenHouse"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/customersCustomWindowImage1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/customersOpenHouseInformation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customersAddressOpenHouse"
            app:layout_constraintVertical_bias="0.45"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/customersOpenHouseInformation"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            android:text="Default Text"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/agentsOpenHouseButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.26"
            app:layout_constraintStart_toEndOf="@+id/customersCustomWindowImage1"
            app:layout_constraintTop_toBottomOf="@+id/customersAddressOpenHouse" />

        <TextView
            android:id="@+id/customersAddressOpenHouse"
            android:layout_width="361dp"
            android:layout_height="25dp"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            android:text="The address will go here"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/agentsCustomWindowImage1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>